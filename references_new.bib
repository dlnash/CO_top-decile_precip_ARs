	shorttitle = {The {Extreme} {Precipitation} {Forecast} {Table}},
	url = {https://objects-us-east-1.dream.io/nwafiles/jom/articles/2020/2020-JOM7/2020_JOM7.pdf},
	doi = {10.15191/nwajom.2020.0807},
	abstract = {A collaborative team of Science and Operations Officers from the National Weather Service (NWS) Weather Forecast Offices (WFOs), hydrologists from the Lower Mississippi River Forecast Center (LMRFC), and management from the Weather Prediction Center (WPC) worked together to develop and transition a tool into NWS operations called the Extreme Precipitation Forecast Table (EPFT). The EPFT was designed to help NWS
