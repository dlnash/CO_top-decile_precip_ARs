	author = {Guo, Yanjuan and Shinoda, Toshiaki and Guan, Bin and Waliser, Duane Edward and Chang, Edmund K M},
	month = sep,
	year = {2020},
	note = {Publisher: American Meteorological Society},
	pages = {7817--7834},
}

