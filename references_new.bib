	note = {Publisher: CSIRO},
	keywords = {Northwest Cloud Band, atmospheric river, atmospheric rivers, extreme rainfall, monsoon, narrow band of strong moisture transport, weather and seasonal forecasts},
	pages = {3--16},
}

@article{Xu2017,
