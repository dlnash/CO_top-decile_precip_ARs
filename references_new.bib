	editor = {Ralph, F. Martin and Dettinger, Michael D. and Rutz, Jonathan J. and Waliser, Duane E.},
	year = {2020},
	doi = {10.1007/978-3-030-28906-5_5},
	keywords = {Atmospheric rivers, Ecosystems, Floods, Orographic precipitation, Regional perspectives, Water resources, Winds},
