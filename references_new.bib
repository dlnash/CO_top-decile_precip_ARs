	author = {Manatsa, D and Chingombe, W and Matarira, C H},
	year = {2008},
	keywords = {drought prediction, droughts, el ni, indian ocean dipole, no-southern oscillation, southern africa, zonal mode},
	pages = {2011--2029},
}

@article{Gamelin2022EvaluatingModel,
